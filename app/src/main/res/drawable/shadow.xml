<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra más difuminada -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000"/> <!-- Color de la sombra más claro para difuminado -->
            <corners android:radius="8dp"/> <!-- Redondez de las esquinas -->
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" /> <!-- Padding aumentado para efecto difuminado -->
        </shape>
    </item>
    <!-- Fondo ajustado para compensar el padding de la sombra -->
    <item android:left="6dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color del fondo -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>
